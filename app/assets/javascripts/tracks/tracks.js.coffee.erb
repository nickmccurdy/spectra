angular.module('tracks', ['ngRoute', 'ngResource', 'selectize'])
.config(['$routeProvider', ($routeProvider) ->
  $routeProvider
  .when('/tracks', {
    templateUrl: '<%= asset_path("tracks/index.html") %>',
    controller: 'TracksIndexController'
  })
  .when('/artists/:artist/albums/:album/tracks', {
    templateUrl: '<%= asset_path("tracks/index.html") %>',
    controller: 'ArtistAlbumTracksIndexController'
  })
])
