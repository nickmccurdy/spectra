angular.module('albums', ['ngRoute', 'ngResource'])
.config(['$routeProvider', ($routeProvider) ->
  $routeProvider
  .when('/albums', {
    templateUrl: '<%= asset_path("albums/index.html") %>',
    controller: 'AlbumIndexController'
  })
  .when('/artists/:artist/albums', {
    templateUrl: '<%= asset_path("albums/index.html") %>',
    controller: 'ArtistAlbumsIndexController'
  })
  .when('/artists/:artist/albums/:album', {
    templateUrl: '<%= asset_path("albums/show.html") %>',
    controller: 'ArtistAlbumShowController'
  })
])
