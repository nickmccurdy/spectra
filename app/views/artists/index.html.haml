.header
  %h1 All Artists
.content
  - if not notice.nil?
    .pure-alert.pure-alert-success#notice= notice
  - if not alert.nil?
    .pure-alert.pure-alert-error#alert= alert
  //= throw error
  %table.pure-table.pure-table-bordered
    %thead
      %tr
        %th Name
        %th Rating
    %tbody
      - @artists.each do |artist|
        %tr
          %td= link_to artist.name, artist
          %td= artist.rating