= form_for(@artist) do |f|
  - if @artist.errors.any?
    #error_explanation
      %h2
        = pluralize(@artist.errors.count, "error")
        prohibited this artist from being saved:
      %ul
        - @artist.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :rating
    %br/
    = f.number_field :rating
  .actions
    = f.submit
