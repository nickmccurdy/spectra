<h1>Listing songs</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Rating</th>
      <th>Artist</th>
      <th>Album</th>
      <th>Date</th>
      <th>Location</th>
      <th>Bitrate</th>
      <th>Lyrics</th>
      <th>Track</th>
      <th>Disc</th>
      <th>Format</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tracks.each do |song| %>
      <tr>
        <td><%= song.title %></td>
        <td><%= song.rating %></td>
        <td><%= song.artist_id %></td>
        <td><%= song.album_id %></td>
        <td><%= song.date %></td>
        <td><%= song.location %></td>
        <td><%= song.bitrate %></td>
        <td><%= song.lyrics %></td>
        <td><%= song.track_id %></td>
        <td><%= song.disc_id %></td>
        <td><%= song.format %></td>
        <td><%= link_to 'Show', song %></td>
        <td><%= link_to 'Edit', edit_song_path(song) %></td>
        <td><%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

